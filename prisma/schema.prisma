generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  nome      String?
  usuarioid String? @unique
  senha     String
  role      String?
}

model DashMaquinas {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  idMaq    String?  @unique
  nomeMaq  String?
  uuid     String?
  status   String?
  operador String?
  gerentes String[]
}

model DashLinhas {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
}

model DashFabricas {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
}
